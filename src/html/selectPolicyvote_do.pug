          input(type="hidden", name="lpn", value='<%=param.getString("lpn")%>')
          // 리스트 페이지 scroll 위치 
          input(type="hidden", name="lst", value='<%=param.getString("lst")%>')
          //  정책반영 001 / 정책참고 002 
          input(type="hidden", name="policy_vote_ty", value='<%=param.getString("policy_vote_ty")%>')
          // sub_tit1_box 
          .sub_tit1_box
            h2.sub_tit1 정책반영
          .s_outer
            .sub_each.cwb_container.box-shadow-card.round-md
              .center_white_box.ico_box
