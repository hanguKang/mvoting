extends ../templates/layout_sub

block content
  // contents 
  .contents
    // container 
    .container.clearfix
      // common_right 
      #real_contents.common_right
        form#sform(name="aform", method="post")
          input(type="hidden", name="order_type", value='<%=param.getString("order_type")%>')
