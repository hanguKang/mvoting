extends ../templates/layout_sub

block content
  // contents 
  .contents
    // container 
    .container.clearfix
      // common_right
      #real_contents.common_right
        form#aform(role="form", method="post", action="/mvoting/setting/mypage/ctz/insertCtzReqBoard.do",  enctype="multipart/form-data")
        .sub_tit1_box
          h2.sub_tit1 이용문의
        // // sub_tit1_box 
        .s_outer
          // board_view
          .cwb_container.vote_create_each
            .center_white_box.full.box-shadow-card.round-md
              .form_row.setting
                .cell.label
                  label(for="sort") 민원분류
                .cell
                  select#sort.form_slt( name="use_inqry_se")
                    option ?
              .form_row
                .cell.label
                  label(for="qestn_sj") 제목
                .cell
                  input#qestn_sj.form_input(type="text", name="qestn_sj", placeholder="제목을 입력해 주세요. (최대 200자)" maxlength="200")
                  span.txt_length.input
                    b 0
                    | / 
                    span.maxlength_val 200
              .form_row
                .cell.label
                  label(for="qestn_cn") 내용
                .cell.tarea
                  textarea#qestn_cn.form_textarea(name="qestn_cn", maxlength="1000", cols="30", rows="10", placeholder="내용을 입력해 주세요.")
              .form_row
                .cell.label
                  label(for="qestn_cn") 공개여부
                .cell
                  span.radio_each
                    input#openAll(type="radio", name="othbc_at", checked="checked", value="Y")
                    label(for="openAll")
                      span.vradio
                      | 전체공개
                  span.radio_each
                    input#openNot(type="radio", name="othbc_at", value="N")
                    label(for="openNot")
                      span.vradio
                      | 비공개
            .common_btn_box.ta_c
              a.common_btn.list.round-xxxlg(href="/mvoting/setting/mypage/ctz/selectPageListCtzReqBoard.do", onclick="fnGoList(); return false;") 목록
              a.common_btn.regist.round-xxxlg(href="#", onclick="fnGoInsert(); return false;") 등록
          // // board_view END
      // // common_right END
    // // container END
  // // contents END